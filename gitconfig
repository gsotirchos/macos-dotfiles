    sync = !git stash && git pull && git stash apply && git add . && git commit -m \"${1-\"Update locally\"}\" && git push && git stash clear && :
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[diff]
    tool = vimdiff
